<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/film_reel" />

    <LinearLayout
        android:id="@+id/Button_Space"
        android:layout_width="@dimen/Button_space_width"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/Bottom_Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_Menu">

        <Button
            android:id="@+id/find_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/find_film" />

        <Button
            android:id="@+id/favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/favorites" />

        <Button
            android:id="@+id/recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/recommendations" />

        <Button
            android:id="@+id/wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/wishlist" />

        <Button
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/setting" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Top_Menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Top_Menu_Height"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ford_v_ferrari"
            android:layout_width="@dimen/Width_posters"
            android:layout_height="@dimen/Top_Menu_Height"
            android:scaleType="centerCrop"
            android:src="@drawable/ford_v_ferrari" />

        <ImageView
            android:id="@+id/the_gentlemen"
            android:layout_width="@dimen/Width_posters"
            android:layout_height="@dimen/Top_Menu_Height"
            android:scaleType="centerCrop"
            android:src="@drawable/the_gentlemen" />


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/Width_posters"
            android:layout_height="@dimen/Top_Menu_Height"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />

        <ImageView
            android:id="@+id/bad_good"
            android:layout_width="@dimen/Width_posters"
            android:layout_height="@dimen/Top_Menu_Height"
            android:scaleType="centerCrop"
            android:src="@drawable/bad_good" />


        <ImageView
            android:id="@+id/the_gentlemen_fortune"
            android:layout_width="@dimen/Width_posters"
            android:layout_height="@dimen/Top_Menu_Height"
            android:scaleType="centerCrop"
            android:src="@drawable/the_gentlemen_fortune" />

        <ImageView
            android:id="@+id/king_lion"
            android:layout_width="@dimen/Width_posters"
            android:layout_height="@dimen/Top_Menu_Height"
            android:scaleType="centerCrop"
            android:src="@drawable/king_lion" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Bottom_Menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Button_Menu_Height"
        android:background="@color/color_Bottom_Menu"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>